require 'fileutils'

desc "Copy over build files"
task :movefiles do
  sitedir = ENV['DIR']
  if (ENV['DIR'].nil?)
    puts "Set DIR= to your website folder"
    return -1;
  end

  process = [
    "cp dist/LASTBUILD #{sitedir}",
    "cp dist/miso.ds.dev.zip #{sitedir}",
    "cp dist/miso.ds.min.js #{sitedir}" ,
    "cp dist/miso.ds.deps.min.js #{sitedir}",
  ]

  `#{ process.join(' && ') }`
end 